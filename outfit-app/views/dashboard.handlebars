<div class="wrapper">
  <br />
  <div>
    <h3>Your favourite or posted outfits:</h3>
  </div>
</div>

<div class="grid">

  {{#each outfits as |outfit|}}
    <div class="content">
      <section class="card">
        <a href="/outfits/{{id}}">
          <img class="outfit-image" src="{{image}}" alt="Outfit" />
        </a>
        <div class="card-body-simple">
          <div>
            <h1>{{outfit_name}}</h1>
            <h2>Posted on: {{format_date date_created}}</h2>
          </div>

          <div class="btn-no-style like">
              <input
                type="checkbox"
                id="like"
                   data-id="{{id}}"
                value="true"
              />
          </div>

        </div>
      </section>
    </div>
  {{/each}}
</div>
