<div class="content">
  <h1>Create a New Pose:</h1>
  <form class="form new-outfit-form">
    <div class="form-group">
      <label for="item-name">Item name:</label>
      <input class="form-input" type="text" id="item-name" name="item-name" />
    </div>
    <div class="form-group">
      <label for="item-desc">Description:</label>
      <textarea class="form-input" id="item-desc" name="item-desc"></textarea>
    </div>
    <div class="form-group">
      <label for="item-price">Price:</label>
      <input
        class="form-input"
        type="number"
        id="item-price"
        name="item-price"
      />
    </div>
    <div class="form-group">
      <label for="item-brand">Brand:</label>
      <input
        class="form-input"
        type="number"
        id="item-brand"
        name="item-brand"
      />
    </div>
    <div class="form-group">
      <label for="item-store">Where did you see it / bought it:</label>
      <input
        class="form-input"
        type="number"
        id="item-store"
        name="item-store"
      />
    </div>
    <div class="form-group">
      <label for="item-gender">Gender:</label>
      <input
        class="form-input"
        type="number"
        id="item-gender"
        name="item-gender"
      />
    </div>
    <div class="form-group">
      <label for="item-occasion">Occasion:</label>
      <input
        class="form-input"
        type="number"
        id="item-occasion"
        name="item-occasion"
      />
    </div>
    <div class="form-group">
      <label for="item-colour">Colour:</label>
      <input
        class="form-input"
        type="number"
        id="item-colour"
        name="item-colour"
      />
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create Outfit</button>
    </div>
  </form>
</div>